{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://roguetrader.local/schemas/cards.schema.json",
  "title": "Commander Cards Assignment",
  "description": "Schema for mapping roles to their default cards (not granted by moves)",
  "type": "object",
  "patternProperties": {
    "^[A-Za-z ]+$": {
      "type": "array",
      "description": "Array of card IDs assigned to this role by default",
      "items": {
        "type": "object",
        "description": "Card definition with ID and path",
        "properties": {
          "id": {
            "type": "string",
            "description": "Card ID that corresponds to a folder name",
            "pattern": "^[a-zA-Z0-9-]+$"
          },
          "path": {
            "type": "string",
            "description": "Path to the card folder containing card.json and other files",
            "pattern": "^data/cards/[a-zA-Z0-9-]+$"
          }
        },
        "required": ["id", "path"],
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "Navigator": [
        {"id": "navigation-equipment", "path": "data/cards/navigation-equipment"}
      ],
      "Mech Adept": [
        {"id": "robotic-companion", "path": "data/cards/robotic-companion"},
        {"id": "tech-tools", "path": "data/cards/tech-tools"}
      ],
      "Lord Commander": [
        {"id": "ship", "path": "data/cards/ship"},
        {"id": "crew", "path": "data/cards/crew"}
      ]
    }
  ]
}