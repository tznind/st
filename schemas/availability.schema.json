{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://stonetop.local/schemas/availability.schema.json",
  "title": "Stonetop Availability Map",
  "description": "Schema for mapping roles to move IDs and their initial checked state",
  "type": "object",
  "patternProperties": {
    "^[A-Za-z ]+$": {
      "type": "object",
      "description": "A role name mapping to move availability",
      "properties": {
        "_movesFile": {
          "type": "string",
          "description": "Path to the JSON file containing moves for this role",
          "pattern": "^data/moves/.+\\.json$"
        },
        "description": {
          "type": "string",
          "description": "Description of the role"
        },
        "cards": {
          "type": "array",
          "description": "Array of card IDs automatically assigned to this role (not granted by moves)",
          "items": {
            "type": "string",
            "description": "Card ID that corresponds to a folder name in data/cards/",
            "pattern": "^[a-zA-Z0-9-]+$"
          },
          "default": []
        }
      },
      "patternProperties": {
        "^[a-zA-Z0-9]+$": {
          "type": "boolean",
          "description": "Move ID mapped to its initial checked state (true = initially checked, false = initially unchecked)"
        }
      },
      "required": ["_movesFile", "description"],
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "Fox": {
        "_movesFile": "data/moves/fox.json",
        "cards": [],
        "l1a2b3": false,
        "d4e5f6": false
      },
      "The Ranger": {
        "_movesFile": "data/moves/the-ranger.json",
        "cards": [],
        "rg001": true,
        "rg002": false
      },
      "The Heavy": {
        "_movesFile": "data/moves/the-heavy.json",
        "cards": [],
        "hv001": false,
        "hv003": true
      }
    }
  ]
}
